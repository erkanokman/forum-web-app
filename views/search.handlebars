<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>
  <body style="background-color: lightblue;" >

    {{#if errMsg}}
    <div class="row">
      <div class="col-lg-12">

            <div  class="alert alert-danger">{{errMsg}}</div>
      </div>
      </div>
    </div>
    {{/if}}

    <h2 style="text-align : center; font-weight : bold; text-decoration : underline;" class="page-header">SEARCH QUESTIONS</h2>
      <div class="row">
        <div  class="col-sm-4 col-sm-offset-4">
          <form onsubmit="return chk()"  method="post" action="/search">
            <div style="background-color: lightyellow; width: auto; border: 2px solid black; padding: 20px; margin: 20px;">
            <label style="text-align : center;" >Select Tag ( select multiple tags by using ctrl key)</label><br>
            <select name="qTags" multiple size="10" style="width: 280px;">
            {{#each allTags}}
              <option value="{{tag}}">{{tag}}</option>
              {{/each}}<br><br>
            </select><br><br>

          <div class="col-sm-4 col-sm-offset-3">
            <button style="font-weight : bold; width: 100px;" type="submit" class="btn btn-default btn-large">SUBMIT</button>
          </div>
          <br><br>
        </div>
        </form>
        </div>

      </div>

    <script type="text/javascript">

      function chk()
      {
        var selectEle = document.getElementsByTagName('select')[0];
        var result = [];

        for(i=0;i<selectEle.length;i++){
          if(selectEle[i].selected){
            result.push(selectEle.value);
          }
        }

        if(result.length == 0){
          alert("You have not selected any tag(s)!");
          return false;
        }

        return true;

      }

    </script>

  </body>
</html>
